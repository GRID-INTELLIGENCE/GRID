  "escalation_rules": [
    {
      "rule_id": "ESC_CRITICAL_ANY",
      "when": "severity == critical",
      "actions": ["escalate_incident", "require_human_review"]
    },
    {
      "rule_id": "ESC_HIGH_REPEATED",
      "when": "severity == high AND repeat_count >= 3",
      "actions": ["rate_limit", "require_human_review", "notify"]
    },
    {
      "rule_id": "ESC_HARD_CONSTRAINT",
      "when": "category == hard_constraints",
      "actions": ["block_request", "quarantine_output", "escalate_incident", "notify_frontier_red_team"]
    },
    {
      "rule_id": "ESC_ALIGNMENT_CONCERN",
      "when": "category in [alignment, deception, alignment_faking]",
      "actions": ["escalate_to_alignment_team", "flag_for_interpretability"]
    },
    {
      "rule_id": "ESC_RSP_THRESHOLD",
      "when": "category == responsible_scaling",
      "actions": ["escalate_to_rsp_committee", "notify_frontier_red_team"]
    }
