{
  "version": "1.0",
  "provider": "xAI",
  "description": "Risk thresholds for xAI integration in wellness apps",
  "risk_levels": {
    "low": {
      "threshold": 0.3,
      "actions": ["log", "basic_filter"],
      "examples": ["general wellness queries"]
    },
    "medium": {
      "threshold": 0.6,
      "actions": ["moderate", "bias_check", "notify_user"],
      "examples": ["meditation advice", "nutrition tips"]
    },
    "high": {
      "threshold": 0.8,
      "actions": ["escalate", "block_if_violated", "human_review"],
      "examples": ["medical advice", "mental health crisis"]
    },
    "critical": {
      "threshold": 1.0,
      "actions": ["block_immediate", "alert_admin", "log_incident"],
      "examples": ["suicide ideation", "harmful practices"]
    }
  },
  "wellness_domains": {
    "mental_health": {
      "max_hallucination_rate": 0.1,
      "required_disclaimer": "This is not medical advice. Consult a professional."
    },
    "physical_wellness": {
      "bias_threshold": 0.2,
      "cultural_sensitivity_check": true
    },
    "nutrition": {
      "source_verification": true,
      "calorie_estimate_limit": 500
    }
  },
  "global_rules": {
    "no_harm": true,
    "privacy_compliant": true,
    "alignment_score_min": 0.7
  }
}
