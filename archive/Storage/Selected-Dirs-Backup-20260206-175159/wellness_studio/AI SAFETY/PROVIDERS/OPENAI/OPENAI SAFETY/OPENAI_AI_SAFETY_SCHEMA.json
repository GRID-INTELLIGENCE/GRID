{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/openai-ai-safety-reporting.json",
  "title": "OpenAI AI Safety Research Reporting Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "metadata",
    "sources",
    "taxonomy",
    "scenarios",
    "user_rights",
    "remediation_playbook",
    "findings",
    "evidence_map",
    "relevance_rules"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "report_title",
        "version",
        "created_at",
        "prepared_by",
        "scope"
      ],
      "properties": {
        "report_title": { "type": "string" },
        "version": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" },
        "prepared_by": {
          "type": "object",
          "additionalProperties": false,
          "required": ["name", "role", "organization"],
          "properties": {
            "name": { "type": "string" },
            "role": { "type": "string" },
            "organization": { "type": "string" }
          }
        },
        "scope": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "included_sources",
            "excluded_sources",
            "focus_statement"
          ],
          "properties": {
            "included_sources": {
              "type": "array",
              "items": { "type": "string", "format": "uri" },
              "minItems": 1
            },
            "excluded_sources": {
              "type": "array",
              "items": { "type": "string", "format": "uri" }
            },
            "focus_statement": { "type": "string" }
          }
        }
      }
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "title",
          "url",
          "date_published",
          "source_type",
          "summary",
          "safety_relevance",
          "claims"
        ],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "date_published": { "type": "string", "format": "date" },
          "source_type": {
            "type": "string",
            "enum": [
              "research_index",
              "safety_hub",
              "system_card",
              "preparedness_framework",
              "other_openai_safety"
            ]
          },
          "summary": { "type": "string" },
          "safety_relevance": {
            "type": "object",
            "additionalProperties": false,
            "required": ["themes", "priority"],
            "properties": {
              "themes": {
                "type": "array",
                "items": { "type": "string" },
                "minItems": 1
              },
              "priority": {
                "type": "string",
                "enum": ["high", "medium", "low"]
              }
            }
          },
          "claims": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["claim", "evidence_quote", "evidence_location"],
              "properties": {
                "claim": { "type": "string" },
                "evidence_quote": { "type": "string" },
                "evidence_location": { "type": "string" }
              }
            }
          },
          "links_to": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "taxonomy": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "theme_id",
          "theme_name",
          "definition",
          "inclusion_criteria"
        ],
        "properties": {
          "theme_id": { "type": "string" },
          "theme_name": { "type": "string" },
          "definition": { "type": "string" },
          "inclusion_criteria": {
            "type": "array",
            "items": { "type": "string" }
          },
          "exclusion_criteria": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "scenarios": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "scenario_id",
          "title",
          "description",
          "risk_type",
          "expected_model_behavior",
          "user_rights_impacted",
          "user_actions",
          "evidence_refs"
        ],
        "properties": {
          "scenario_id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "risk_type": {
            "type": "string",
            "enum": [
              "disallowed_content",
              "jailbreak",
              "hallucination",
              "instruction_conflict",
              "deception",
              "privacy",
              "bias",
              "other"
            ]
          },
          "expected_model_behavior": { "type": "string" },
          "user_rights_impacted": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "user_actions": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["step", "action", "purpose"],
              "properties": {
                "step": { "type": "integer", "minimum": 1 },
                "action": { "type": "string" },
                "purpose": { "type": "string" }
              }
            }
          },
          "evidence_refs": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      }
    },
    "user_rights": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "right_id",
          "statement",
          "rationale",
          "supporting_sources"
        ],
        "properties": {
          "right_id": { "type": "string" },
          "statement": { "type": "string" },
          "rationale": { "type": "string" },
          "supporting_sources": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      }
    },
    "remediation_playbook": {
      "type": "object",
      "additionalProperties": false,
      "required": ["overview", "steps", "escalation_paths"],
      "properties": {
        "overview": { "type": "string" },
        "steps": {
          "type": "array",
          "minItems": 3,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["step", "action", "why_it_matters"],
            "properties": {
              "step": { "type": "integer", "minimum": 1 },
              "action": { "type": "string" },
              "why_it_matters": { "type": "string" }
            }
          }
        },
        "escalation_paths": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["trigger", "path", "expected_outcome"],
            "properties": {
              "trigger": { "type": "string" },
              "path": { "type": "string" },
              "expected_outcome": { "type": "string" }
            }
          }
        }
      }
    },
    "findings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "finding_id",
          "summary",
          "supporting_sources",
          "implications_for_users",
          "recommended_actions"
        ],
        "properties": {
          "finding_id": { "type": "string" },
          "summary": { "type": "string" },
          "supporting_sources": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "implications_for_users": { "type": "string" },
          "recommended_actions": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      }
    },
    "evidence_map": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["source_id", "theme_ids", "scenario_ids", "notes"],
        "properties": {
          "source_id": { "type": "string" },
          "theme_ids": { "type": "array", "items": { "type": "string" } },
          "scenario_ids": { "type": "array", "items": { "type": "string" } },
          "notes": { "type": "string" }
        }
      }
    },
    "relevance_rules": {
      "type": "object",
      "additionalProperties": false,
      "required": ["include_if", "exclude_if", "priority_rules"],
      "properties": {
        "include_if": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "exclude_if": {
          "type": "array",
          "items": { "type": "string" }
        },
        "priority_rules": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["rule", "priority"],
            "properties": {
              "rule": { "type": "string" },
              "priority": {
                "type": "string",
                "enum": ["high", "medium", "low"]
              }
            }
          }
        }
      }
    }
  }
}
