{
  "version": "1.0",
  "project": "AI SAFETY - OPENAI",
  "purpose": "Scheduled monitoring and logging for OpenAI safety research sources",
  "_local_only_notice": "DISABLED: External URL monitoring disabled for LOCAL_ONLY mode. Set WELLNESS_LOCAL_ONLY=false to re-enable.",
  "enabled": false,
  "schedule": {
    "timezone": "UTC",
    "cadence": "monthly",
    "day_of_month": 1,
    "time_utc": "02:00",
    "retry_policy": {
      "max_retries": 3,
      "backoff_seconds": [60, 300, 900]
    }
  },
  "sources_disabled": [
    {
      "id": "openai_research_index",
      "url": "https://openai.com/research/index/",
      "type": "research_index",
      "priority": "high",
      "_disabled_reason": "External URL - requires network access"
    },
    {
      "id": "openai_safety_evaluations_hub",
      "url": "https://openai.com/safety/evaluations-hub/",
      "type": "safety_hub",
      "priority": "high",
      "_disabled_reason": "External URL - requires network access"
    },
    {
      "id": "openai_safety_alignment",
      "url": "https://openai.com/safety/how-we-think-about-safety-alignment/",
      "type": "safety_page",
      "priority": "medium",
      "_disabled_reason": "External URL - requires network access"
    },
    {
      "id": "openai_preparedness_framework",
      "url": "https://openai.com/index/updating-our-preparedness-framework/",
      "type": "preparedness_framework",
      "priority": "high",
      "_disabled_reason": "External URL - requires network access"
    }
  ],
  "sources": [],
  "filters": {
    "include_keywords": [
      "safety",
      "alignment",
      "evaluation",
      "monitorability",
      "scheming",
      "jailbreak",
      "hallucination",
      "instruction hierarchy",
      "preparedness",
      "system card"
    ],
    "exclude_keywords": ["product announcement", "pricing", "marketing"]
  },
  "outputs": {
    "log_path": "AI SAFETY - OPENAI/monitoring/logs/monitoring.log",
    "status_path": "AI SAFETY - OPENAI/monitoring/status/last_run.json",
    "diff_path": "AI SAFETY - OPENAI/monitoring/diffs/",
    "reports_path": "AI SAFETY - OPENAI/monitoring/reports/",
    "snapshots_path": "AI SAFETY - OPENAI/monitoring/snapshots/"
  },
  "logging": {
    "level": "INFO",
    "rotate": true,
    "max_size_mb": 10,
    "max_files": 10
  },
  "alerts": {
    "enabled": false,
    "channels": [
      {
        "type": "file",
        "path": "AI SAFETY - OPENAI/monitoring/alerts/alerts.json"
      }
    ],
    "trigger_on": [
      "new_source_detected",
      "source_updated",
      "schema_violation",
      "fetch_error"
    ]
  }
}
