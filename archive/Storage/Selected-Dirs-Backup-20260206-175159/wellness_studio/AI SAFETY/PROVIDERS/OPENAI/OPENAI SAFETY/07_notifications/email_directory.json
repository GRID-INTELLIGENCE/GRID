{
  "version": "1.0",
  "purpose": "Email directory for AI safety notifications, escalations, and reporting",
  "default_channel": "email",
  "groups": [
    {
      "group_id": "safety_ops",
      "name": "Operational safety response team",
      "members": ["safety-ops@example.org"]
    },
    {
      "group_id": "research_leads",
      "name": "AI safety research leadership",
      "members": ["research-leads@example.org"]
    },
    {
      "group_id": "compliance",
      "name": "Compliance and governance stakeholders",
      "members": ["compliance@example.org"]
    }
  ],
  "recipients": [
    {
      "recipient_id": "RECIPIENT_TEMPLATE",
      "recipient_name": "First Last",
      "recipient_role": "Role/Title",
      "email": "user@example.org",
      "team": "Team Name",
      "severity_thresholds": ["warning", "high", "critical"],
      "preferred_channel": "email",
      "active": true,
      "tags": []
    }
  ],
  "routing_rules": [
    {
      "rule_id": "ROUTE_CRITICAL",
      "when": "severity == critical",
      "notify": ["safety_ops", "compliance"]
    },
    {
      "rule_id": "ROUTE_HIGH",
      "when": "severity == high",
      "notify": ["safety_ops", "research_leads"]
    },
    {
      "rule_id": "ROUTE_WARNING",
      "when": "severity == warning",
      "notify": ["safety_ops"]
    }
  ]
}
