{
  "version": "1.0",
  "purpose": "Automated safety actions matrix for rule/flag/trigger-based responses",
  "severity_levels": ["info", "low", "medium", "high", "critical"],
  "actions_catalog": [
    "log_only",
    "notify",
    "rate_limit",
    "require_user_confirmation",
    "require_human_review",
    "block_request",
    "escalate_incident",
    "quarantine_output",
    "request_additional_context",
    "provide_safe_alternative"
  ],
  "triggers": [
    {
      "trigger_id": "TRG_DISALLOWED_CONTENT",
      "category": "disallowed_content",
      "description": "Request attempts disallowed or unsafe content.",
      "thresholds": {
        "confidence_min": 0.7
      },
      "severity": "high",
      "actions": [
        "block_request",
        "provide_safe_alternative",
        "notify",
        "log_only"
      ],
      "notes": "Refuse unsafe content and offer safe alternatives."
    },
    {
      "trigger_id": "TRG_JAILBREAK_PATTERN",
      "category": "jailbreak",
      "description": "Prompt indicates jailbreak or safety bypass attempt.",
      "thresholds": {
        "confidence_min": 0.6
      },
      "severity": "high",
      "actions": [
        "block_request",
        "notify",
        "log_only",
        "require_human_review"
      ],
      "notes": "Maintain refusal and record attempt."
    },
    {
      "trigger_id": "TRG_HALLUCINATION_RISK",
      "category": "hallucination",
      "description": "High risk of unverified factual response.",
      "thresholds": {
        "confidence_max": 0.5
      },
      "severity": "medium",
      "actions": [
        "request_additional_context",
        "provide_safe_alternative",
        "log_only"
      ],
      "notes": "Ask for sources and provide uncertainty disclosures."
    },
    {
      "trigger_id": "TRG_INSTRUCTION_CONFLICT",
      "category": "instruction_conflict",
      "description": "User request conflicts with system or safety rules.",
      "thresholds": {
        "confidence_min": 0.5
      },
      "severity": "medium",
      "actions": [
        "require_user_confirmation",
        "provide_safe_alternative",
        "log_only"
      ],
      "notes": "Explain conflict and guide toward compliant requests."
    },
    {
      "trigger_id": "TRG_DECEPTION_SIGNAL",
      "category": "deception",
      "description": "Model response indicates potential deception or false completion.",
      "thresholds": {
        "confidence_min": 0.6
      },
      "severity": "high",
      "actions": ["require_human_review", "notify", "log_only"],
      "notes": "Flag for review and require verification."
    },
    {
      "trigger_id": "TRG_PRIVACY_EXPOSURE",
      "category": "privacy",
      "description": "Potential exposure of personal or sensitive data.",
      "thresholds": {
        "confidence_min": 0.6
      },
      "severity": "critical",
      "actions": [
        "block_request",
        "quarantine_output",
        "escalate_incident",
        "notify",
        "log_only"
      ],
      "notes": "Prevent disclosure and escalate."
    },
    {
      "trigger_id": "TRG_BIAS_OR_HARM",
      "category": "bias",
      "description": "Detected biased or harmful content.",
      "thresholds": {
        "confidence_min": 0.6
      },
      "severity": "medium",
      "actions": ["provide_safe_alternative", "notify", "log_only"],
      "notes": "Provide neutral revision and record."
    },
    {
      "trigger_id": "TRG_HIGH_RISK_DUAL_USE",
      "category": "dual_use",
      "description": "Requests enabling harmful misuse (bio/cyber).",
      "thresholds": {
        "confidence_min": 0.65
      },
      "severity": "critical",
      "actions": ["block_request", "escalate_incident", "notify", "log_only"],
      "notes": "Restrict to defensive, high-level guidance only."
    }
  ],
  "escalation_rules": [
    {
      "rule_id": "ESC_CRITICAL_ANY",
      "when": "severity == critical",
      "actions": ["escalate_incident", "require_human_review"]
    },
    {
      "rule_id": "ESC_HIGH_REPEATED",
      "when": "severity == high AND repeat_count >= 3",
      "actions": ["rate_limit", "require_human_review", "notify"]
    }
  ],
  "notification_defaults": {
    "channels": ["email", "log"],
    "email_template_id": "TPL_SAFETY_ALERT_DEFAULT"
  }
}
