{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/ai-safety-email-directory.json",
  "title": "AI Safety Email Directory Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "purpose", "default_channel", "recipients"],
  "properties": {
    "version": { "type": "string" },
    "purpose": { "type": "string" },
    "default_channel": {
      "type": "string",
      "enum": ["email", "file", "disabled"]
    },
    "recipients": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "recipient_id",
          "recipient_name",
          "recipient_role",
          "email",
          "team",
          "severity_thresholds",
          "preferred_channel",
          "active"
        ],
        "properties": {
          "recipient_id": { "type": "string" },
          "recipient_name": { "type": "string" },
          "recipient_role": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "team": { "type": "string" },
          "severity_thresholds": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "enum": ["info", "warning", "high", "critical"]
            }
          },
          "preferred_channel": {
            "type": "string",
            "enum": ["email", "file"]
          },
          "active": { "type": "boolean" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["group_id", "name", "members"],
        "properties": {
          "group_id": { "type": "string" },
          "name": { "type": "string" },
          "members": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      }
    },
    "routing_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["rule_id", "when", "notify"],
        "properties": {
          "rule_id": { "type": "string" },
          "when": { "type": "string" },
          "notify": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      }
    },
    "audit": {
      "type": "object",
      "additionalProperties": false,
      "required": ["updated_at", "updated_by"],
      "properties": {
        "updated_at": { "type": "string", "format": "date-time" },
        "updated_by": { "type": "string" }
      }
    }
  }
}
