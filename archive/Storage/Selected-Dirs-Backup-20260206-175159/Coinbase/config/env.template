# ============================================================================
# COINBASE Project Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!
# ============================================================================

# ==========================
# ENVIRONMENT
# ==========================
COINBASE_ENV=development
# Options: development, staging, production

# Project paths (optional - auto-detected if not set)
# COINBASE_PROJECT_ROOT=/path/to/coinbase
# COINBASE_PORTFOLIO_PATH=/path/to/portfolios/yahoo_portfolio.csv

# ==========================
# DATABRICKS CONFIGURATION
# ==========================
# Required for portfolio persistence and analytics

DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=dapi_your_token_here
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your_warehouse_id
DATABRICKS_CLUSTER_ID=your-cluster-id

# Set to true to run in offline mode (uses mock data)
DATABRICKS_OFFLINE=false

# ==========================
# SECURITY & ENCRYPTION
# ==========================
# Generate with: python -c "import secrets, base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"

GRID_ENCRYPTION_KEY=your_base64_encoded_32_byte_key_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================
# EXTERNAL APIS
# ==========================
# Only include APIs you actually use

# OpenAI (for AI-powered analysis)
# OPENAI_API_KEY=sk-your-openai-key-here

# Yahoo Finance API (if using premium features)
# YAHOO_FINANCE_API_KEY=your-yahoo-api-key

# ==========================
# DATABASE (Optional)
# ==========================
# For local development, SQLite is used by default

# DATABASE_URL=sqlite:///./coinbase.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/coinbase

# ==========================
# LOGGING
# ==========================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Log file location (optional)
# LOG_FILE_PATH=/path/to/logs/coinbase.log

# ==========================
# RATE LIMITING
# ==========================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ==========================
# FEATURE FLAGS
# ==========================
ENABLE_PORTFOLIO_SYNC=true
ENABLE_REAL_TIME_PRICES=true
ENABLE_AI_RECOMMENDATIONS=false

# ============================================================================
# NOTES:
# 1. All secrets should be loaded from environment variables, never hardcoded
# 2. In production, use a secrets manager (GCP Secret Manager, AWS Secrets, etc.)
# 3. Rotate credentials regularly (every 90 days recommended)
# 4. Use different credentials for each environment
# ============================================================================
