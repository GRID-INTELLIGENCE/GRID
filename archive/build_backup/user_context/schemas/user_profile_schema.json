{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Profile Schema",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string",
      "description": "Unique user identifier"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Profile creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "preferences": {
      "type": "object",
      "properties": {
        "code_style": {
          "type": "object",
          "description": "Code style preferences"
        },
        "preferred_tools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of preferred tools"
        },
        "work_hours_start": {
          "type": "integer",
          "minimum": 0,
          "maximum": 23,
          "description": "Typical work start hour (0-23)"
        },
        "work_hours_end": {
          "type": "integer",
          "minimum": 0,
          "maximum": 23,
          "description": "Typical work end hour (0-23)"
        },
        "preferred_languages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Preferred programming languages"
        },
        "notification_preferences": {
          "type": "object",
          "description": "Notification preferences"
        }
      }
    },
    "work_patterns": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "description": "Historical work patterns"
    },
    "file_access_patterns": {
      "type": "object",
      "description": "File access patterns by file path"
    },
    "tool_usage_patterns": {
      "type": "object",
      "description": "Tool usage patterns by tool name"
    },
    "task_patterns": {
      "type": "object",
      "description": "Task completion patterns by task type"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata"
    }
  },
  "required": ["user_id", "created_at", "updated_at"]
}
