{
  "version": "1.0.0",
  "globalSettings": {
    "defaultAction": "allow",
    "enforcementMode": "strict",
    "logDenylistEvents": true
  },
  "denylistRules": [
    {
      "name": "disable-web-servers",
      "reason": "network-dependent",
      "scope": "global",
      "enabled": true,
      "matchAttributes": {
        "category": ["web-based", "api-gateway"],
        "requiresNetwork": true
      },
      "notes": "Disable all web-based servers and API gateways to reduce network dependency"
    },
    {
      "name": "disable-high-resource-servers",
      "reason": "resource-intensive",
      "scope": "temporary",
      "enabled": false,
      "matchAttributes": {
        "resourceProfile": ["high", "critical"]
      },
      "notes": "Temporarily disable resource-intensive servers during development"
    },
    {
      "name": "disable-mcp-servers",
      "reason": "user-disabled",
      "scope": "workspace",
      "enabled": true,
      "matchAttributes": {
        "category": ["mcp-server"]
      },
      "notes": "User requested to disable MCP servers temporarily"
    },
    {
      "name": "disable-failed-python-spawns",
      "reason": "startup-failure",
      "scope": "global",
      "enabled": true,
      "pattern": ".*",
      "matchAttributes": {
        "commandPattern": "^python$"
      },
      "notes": "Disable servers with python spawn errors (ENOENT)"
    }
  ],
  "serverInventory": [
    {
      "name": "grid-rag",
      "category": "rag-system",
      "command": "python",
      "requiresNetwork": true,
      "requiresDatabase": true,
      "port": 8000,
      "dependencies": [
        "python",
        "chromadb",
        "huggingface",
        "ollama"
      ],
      "resourceProfile": "high",
      "priority": 8
    },
    {
      "name": "grid-agentic",
      "category": "agentic-workflow",
      "command": "python",
      "requiresNetwork": true,
      "requiresDatabase": false,
      "port": 8004,
      "dependencies": [
        "python"
      ],
      "resourceProfile": "medium",
      "priority": 7
    },
    {
      "name": "memory",
      "category": "memory-storage",
      "command": "python",
      "requiresNetwork": false,
      "requiresDatabase": false,
      "port": 8003,
      "dependencies": [
        "python"
      ],
      "resourceProfile": "low",
      "priority": 6
    },
    {
      "name": "grid-rag-enhanced",
      "category": "rag-system",
      "command": "python",
      "requiresNetwork": true,
      "requiresDatabase": true,
      "port": 8002,
      "dependencies": [
        "python",
        "chromadb",
        "huggingface",
        "ollama"
      ],
      "resourceProfile": "high",
      "priority": 9
    },
    {
      "name": "grid-enhanced-tools",
      "category": "development-tools",
      "command": "python",
      "requiresNetwork": false,
      "requiresDatabase": false,
      "port": 8001,
      "dependencies": [
        "python"
      ],
      "resourceProfile": "medium",
      "priority": 5
    }
  ]
}
