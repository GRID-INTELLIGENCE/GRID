{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GRID Configuration Schema",
  "description": "Schema for GRID configuration files",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "environment": {
      "type": "string",
      "enum": ["development", "staging", "production"]
    },
    "debug": {
      "type": "boolean"
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
        },
        "format": {
          "type": "string"
        },
        "file": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "database": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "pool_size": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": true
    },
    "api": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "cors_origins": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true,
  "required": ["version"]
}
