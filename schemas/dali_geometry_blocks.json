{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DaliGeometryBlocks",
  "description": "Geometric block representation of Dalí's 'The Elephants' (1948) for visualization",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "painting": { "const": "The Elephants" },
        "artist": { "const": "Salvador Dalí" },
        "year": { "const": 1948 },
        "reference": { "const": "Dalí Museum, St. Petersburg, Florida" },
        "educational_level": { "const": "High School Geometry" }
      }
    },
    "coordinate_system": {
      "type": "object",
      "description": "3D Cartesian coordinate system",
      "properties": {
        "x_axis": { "type": "string", "const": "horizontal (left/right)" },
        "y_axis": { "type": "string", "const": "vertical (up/down)" },
        "z_axis": { "type": "string", "const": "depth (near/far)" },
        "units": { "type": "string", "const": "meters" },
        "origin": { "$ref": "#/$defs/Point3D" }
      }
    },
    "canvas": {
      "type": "object",
      "properties": {
        "width": { "type": "number", "const": 100 },
        "height": { "type": "number", "const": 80 },
        "aspect_ratio": { "type": "number", "const": 1.25 },
        "horizon_y": { "type": "number", "const": 10 },
        "horizon_percent": { "type": "number", "const": 12.5 },
        "negative_space_ratio": { "type": "number", "const": 0.875 }
      }
    },
    "blocks": {
      "type": "object",
      "properties": {
        "ground_plane": {
          "$ref": "#/$defs/GeometricBlock",
          "description": "Reference plane at Y=0"
        },
        "left_elephant": { "$ref": "#/$defs/ElephantBlocks" },
        "right_elephant": { "$ref": "#/$defs/ElephantBlocks" },
        "center_building": { "$ref": "#/$defs/GeometricBlock" }
      }
    },
    "impossibility_metrics": {
      "type": "object",
      "properties": {
        "mass_support_ratio": {
          "type": "number",
          "description": "Weight per support area (normal ≈ 1.0)"
        },
        "slenderness_index": {
          "type": "number",
          "description": "Length/thickness of legs (buckle threshold = 30)"
        },
        "vertical_stretch": {
          "type": "number",
          "description": "Height multiplier vs natural elephant"
        },
        "symmetry_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "impossibility_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Combined surrealism score (80-100 = Pure Dalí)"
        }
      }
    }
  },
  "$defs": {
    "Point3D": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      },
      "required": ["x", "y", "z"]
    },
    "BoundingBox": {
      "type": "object",
      "properties": {
        "min": { "$ref": "#/$defs/Point3D" },
        "max": { "$ref": "#/$defs/Point3D" }
      },
      "required": ["min", "max"]
    },
    "GeometricBlock": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["plane", "box", "cylinder", "ellipsoid", "pyramid"]
        },
        "bounds": { "$ref": "#/$defs/BoundingBox" },
        "dimensions": {
          "type": "object",
          "properties": {
            "width": { "type": "number" },
            "height": { "type": "number" },
            "depth": { "type": "number" }
          }
        },
        "color": { "type": "string" },
        "opacity": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "required": ["id", "type", "bounds"]
    },
    "ElephantBlocks": {
      "type": "object",
      "description": "Geometric decomposition of Dalí's impossible elephant",
      "properties": {
        "position": { "$ref": "#/$defs/Point3D" },
        "legs": {
          "type": "array",
          "items": { "$ref": "#/$defs/GeometricBlock" },
          "minItems": 4,
          "maxItems": 4,
          "description": "Four impossibly thin, tall cylinders"
        },
        "body": {
          "$ref": "#/$defs/GeometricBlock",
          "description": "Compressed ellipsoid mass"
        },
        "burden": {
          "$ref": "#/$defs/GeometricBlock",
          "description": "Obelisk/tower carried on back"
        },
        "metrics": {
          "type": "object",
          "properties": {
            "leg_length": { "type": "number", "const": 15 },
            "leg_thickness": { "type": "number", "const": 0.15 },
            "slenderness_ratio": { "type": "number", "const": 100 },
            "body_volume": { "type": "number" },
            "total_height": { "type": "number" }
          }
        }
      }
    }
  },
