{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Telemetry Data Schema",
  "description": "Schema for GRID telemetry data files",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "session_id": {
      "type": "string"
    },
    "user_id": {
      "type": "string"
    },
    "event_type": {
      "type": "string",
      "enum": ["click", "view", "action", "error", "performance", "navigation"]
    },
    "component": {
      "type": "string"
    },
    "action": {
      "type": "string"
    },
    "data": {
      "type": "object",
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "properties": {
        "user_agent": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "viewport": {
          "type": "object",
          "properties": {
            "width": {
              "type": "integer",
              "minimum": 0
            },
            "height": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "performance": {
          "type": "object",
          "properties": {
            "load_time": {
              "type": "number",
              "minimum": 0
            },
            "dom_ready": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      },
      "additionalProperties": true
    }
  },
  "required": ["timestamp", "event_type"],
  "additionalProperties": true
}
