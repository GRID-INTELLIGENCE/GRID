# =============================================================================
# Gemini Studio Cloud Integration - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# For pre-deployment testing, set GEMINI_MOCK_RESPONSES=true

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# API Key from Google AI Studio (https://aistudio.google.com/apikey)
GEMINI_API_KEY=

# Google Cloud Project ID (for Vertex AI / deployed apps)
GOOGLE_CLOUD_PROJECT=
GEMINI_PROJECT_ID=

# Service Account (alternative to API key)
GOOGLE_APPLICATION_CREDENTIALS=

# OAuth2 (if using OAuth flow)
GEMINI_OAUTH_CLIENT_ID=
GEMINI_OAUTH_CLIENT_SECRET=

# Use Application Default Credentials (true/false)
GEMINI_USE_ADC=true

# Auth method: api_key, oauth2, service_account
GEMINI_AUTH_METHOD=api_key

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# Available models:
#   - gemini-pro
#   - gemini-pro-vision
#   - gemini-1.5-flash
#   - gemini-1.5-pro
#   - gemini-2.0-flash-exp
GEMINI_MODEL=gemini-1.5-pro

# Generation parameters
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192
GEMINI_TOP_P=0.95
GEMINI_TOP_K=40

# -----------------------------------------------------------------------------
# Endpoint Configuration
# -----------------------------------------------------------------------------
# Base URL for Gemini API
GEMINI_BASE_URL=https://generativelanguage.googleapis.com

# API version
GEMINI_API_VERSION=v1beta

# Custom endpoint (for deployed Studio apps)
GEMINI_CUSTOM_ENDPOINT=
GEMINI_STUDIO_ENDPOINT=https://generativelanguage.googleapis.com/v1beta

# AI Studio project URL (for reference)
GEMINI_STUDIO_URL=https://aistudio.google.com

# Cloud region
GEMINI_REGION=us-central1
GEMINI_LOCATION=us-central1

# -----------------------------------------------------------------------------
# Rate Limiting & Retry
# -----------------------------------------------------------------------------
# Requests per minute limit
GEMINI_RPM=60
GEMINI_RATE_LIMIT=60

# Tokens per minute limit
GEMINI_TPM=60000

# Maximum retry attempts
GEMINI_MAX_RETRIES=3

# Base retry delay in seconds
GEMINI_RETRY_DELAY=1.0

# Request timeout in seconds
GEMINI_TIMEOUT=120

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable integration
GEMINI_ENABLED=true

# Enable streaming responses
GEMINI_STREAMING=true

# Enable function calling
GEMINI_FUNCTION_CALLING=true

# Enable code execution (experimental)
GEMINI_CODE_EXECUTION=false

# Verbose logging
GEMINI_VERBOSE=false

# -----------------------------------------------------------------------------
# Deployment Configuration
# -----------------------------------------------------------------------------
# Environment: development, staging, production, local
GEMINI_ENVIRONMENT=development

# Deployment stage: not_deployed, staging, preview, production
GEMINI_DEPLOYMENT_STAGE=not_deployed

# App is deployed (true/false)
GEMINI_DEPLOYED=false

# Use mock responses for testing (true/false)
GEMINI_MOCK_RESPONSES=false
GEMINI_MOCK=false

# Application name identifier
GEMINI_APP_NAME=grid-gemini-integration
