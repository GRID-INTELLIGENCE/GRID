# ============================================================
# GRID Development Environment Configuration
# ============================================================
#
# Copy this file to .env in the project root and customize
# for your local development environment.
#
# Usage:
#   1. Copy: cp config/env/development.env .env
#   2. Edit values as needed
#   3. Source in PowerShell: Get-Content .env | ForEach-Object { if ($_ -match "^([^#].+?)=(.*)$") { [System.Environment]::SetEnvironmentVariable($matches[1], $matches[2], "Process") } }
# ============================================================

# Application Environment
MOTHERSHIP_ENVIRONMENT=development
MOTHERSHIP_APP_NAME=Mothership Cockpit (Dev)
MOTHERSHIP_APP_VERSION=2.1.0

# Server Configuration - DISABLED
MOTHERSHIP_HOST=0.0.0.0
MOTHERSHIP_PORT=8080
MOTHERSHIP_DEBUG=false
MOTHERSHIP_RELOAD=false
MOTHERSHIP_SERVER_DISABLED=true

# Database (SQLite for local development)
MOTHERSHIP_DATABASE_URL=sqlite:///./mothership.db
MOTHERSHIP_DB_POOL_SIZE=5
MOTHERSHIP_DB_ECHO=false

# Security (DEVELOPMENT ONLY - NOT FOR PRODUCTION)
# MOTHERSHIP_SECRET_KEY=GENERATE_NEW_KEY_FOR_PRODUCTION
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
MOTHERSHIP_ALLOW_UNAUTHENTICATED_DEV=1
MOTHERSHIP_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080
MOTHERSHIP_RATE_LIMIT_ENABLED=false

# Logging
MOTHERSHIP_LOG_LEVEL=DEBUG
MOTHERSHIP_LOG_FORMAT=console

# Telemetry - DISABLED
MOTHERSHIP_TELEMETRY_ENABLED=false
MOTHERSHIP_METRICS_ENABLED=false
MOTHERSHIP_METRICS_PATH=/metrics
MOTHERSHIP_TRACING_ENABLED=false

# Integrations (Optional - leave blank if not using)
GEMINI_API_KEY=
MOTHERSHIP_GEMINI_ENABLED=false

# Python Path (Important for imports)
PYTHONPATH=E:\grid\src
