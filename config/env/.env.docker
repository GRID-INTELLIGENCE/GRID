# .env.docker
# Docker Container Environment Configuration
# Updated Jan 1, 2026 - Post-Reorganization
# Used when running: docker-compose up
# Reference: docs/DOCKER_DEPLOYMENT_COMPLETE.md

# Mothership API Server Configuration (container network)
MOTHERSHIP_HOST=0.0.0.0
MOTHERSHIP_PORT=8080

# PostgreSQL Database Configuration (container-internal)
POSTGRES_USER=grid
POSTGRES_PASSWORD=grid_dev_password
POSTGRES_DB=grid_db
DATABASE_URL=postgresql+asyncpg://grid:grid_dev_password@postgres:5432/grid_db
MOTHERSHIP_DATABASE_URL=postgresql+asyncpg://grid:grid_dev_password@postgres:5432/grid_db

# ChromaDB Vector Database (container service)
CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_PERSIST_DIR=/data/chroma
CHROMA_API_IMPL=rest

# Ollama LLM Service (LOCAL ONLY - remote APIs forbidden)
OLLAMA_HOST=http://ollama:11434
RAG_ALLOW_REMOTE_LLM=false

# Redis In-Memory Cache (optional, for session management)
REDIS_URL=redis://redis:6379/0
MOTHERSHIP_REDIS_URL=redis://redis:6379/0
MOTHERSHIP_REDIS_ENABLED=true

# GRID Core Configuration (container paths)
GRID_HOME=/app
GRID_LOG_LEVEL=INFO
GRID_SESSIONS=/data/sessions
GRID_CONVERSATIONS=/data/conversations

# API Server & CORS Configuration (container networking)
API_HOST=0.0.0.0
API_PORT=8080
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Python Module Resolution (container paths)
PYTHONPATH=/app:/app/src:/app/grid:/app/tools

# Debug Mode (development flag)
DEBUG=false

# ===== PRODUCTION OVERRIDES =====
# For production deployment, set:
# POSTGRES_PASSWORD=<use-strong-random-password>
# CORS_ORIGINS=https://yourdomain.com
# GRID_LOG_LEVEL=WARNING
# DEBUG=false
