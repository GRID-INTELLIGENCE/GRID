{
  // ── Python (monorepo paths) ──────────────────────────────────────
  "python.analysis.extraPaths": [
    "./work/GRID/src",
    "./safety",
    "./security",
    "./boundaries"
  ],
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticMode": "workspace",
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "work/GRID/tests",
    "safety/tests",
    "boundaries/tests",
    "-q",
    "--tb=short"
  ],
  "python.languageServer": "None",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports.ruff": "explicit",
      "source.fixAll.ruff": "explicit"
    },
    "editor.rulers": [120]
  },

  // ── TypeScript / React / Frontend ────────────────────────────────
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.rulers": []
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.workingDirectories": ["./frontend"],

  // ── Terminal ─────────────────────────────────────────────────────
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.env.windows": {
    "PROJECT_ROOT": "${workspaceFolder}",
    "GRID_ENV": "development",
    "PYTHONPATH": "${workspaceFolder}/work/GRID/src;${workspaceFolder}/safety;${workspaceFolder}/security;${workspaceFolder}/boundaries"
  },
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "WSL": {
      "path": "wsl.exe",
      "args": ["-d", "Ubuntu"],
      "icon": "terminal-linux",
      "color": "terminal.ansiBlue"
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // ── Search / File Exclusions ─────────────────────────────────────
  "search.exclude": {
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/.cache": true,
    "**/.ipynb_checkpoints": true,
    "**/site-packages": true,
    "**/analysis_outputs": true,
    "**/dist": true,
    "**/build": true,
    "**/.venv": true,
    "**/venv": true,
    "**/artifacts": true,
    "**/logs": true,
    "**/*.pyc": true,
    "**/.uv-cache": true,
    "**/archive/**": true
  },
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.cache/**": true,
    "**/site-packages/**": true,
    "**/analysis_outputs/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/.uv-cache/**": true,
    "**/archive/**": true
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/*.pyc": true,
    "**/.DS_Store": true
  },

  // ── Editor ───────────────────────────────────────────────────────
  "editor.defaultFormatter": null,
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.stickyScroll.enabled": true,
  "workbench.editor.closeOnFileDelete": true,

  // ── Spelling ─────────────────────────────────────────────────────
  "cSpell.words": [
    "fastapi",
    "pydantic",
    "structlog",
    "chromadb",
    "ollama",
    "aioredis",
    "sqlalchemy",
    "asyncio",
    "guardrail",
    "guardrails",
    "overwatch",
    "caraxes"
  ],
  "cursorpyright.analysis.diagnosticMode": "workspace",
  "cursorpyright.analysis.extraPaths": [
    "./work/GRID/src",
    "./safety",
    "./security",
    "./boundaries"
  ],
  "cursorpyright.analysis.typeCheckingMode": "basic"
}
